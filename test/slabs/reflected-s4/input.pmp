# mesh definition:
mesh cartesian mesh.pmp

# material definition:
material fuel ../materials/fuel.pmp
material reflector-left ../materials/reflector-left.pmp
material reflector-right ../materials/reflector-right.pmp

# solver definition:
solver sn {
   energy-groups 2
   order 4
   mixed-face-interpolation 1.0
   least-squares-boundary-interpolation 1
}
