# mesh definition:
mesh unstructured mesh.pmp
mesh unstructured submesh-1.pmp
mesh unstructured submesh-2.pmp
mesh unstructured submesh-3.pmp
mesh unstructured submesh-4.pmp
mesh unstructured submesh-5.pmp
mesh unstructured submesh-6.pmp
mesh unstructured mesh-full.pmp

# material definition:
material fuel1 {
   thermal-properties graphite-matrix-a3-27
   fuel 1
}
material fuel2 {
   thermal-properties graphite-matrix-a3-27
   fuel 1
}
material fuel1-fill {
   thermal-properties graphite-h-451
   fuel 0
}
material fuel2-fill {
   thermal-properties graphite-h-451
   fuel 0
}
material heat-pipe {
   thermal-properties graphite-h-451
   fuel 0
}
material shutdown-rod {
   thermal-properties graphite-h-451
   fuel 0
}
material moderator {
   thermal-properties graphite-h-451
   fuel 0
}
material reflector {
   thermal-properties graphite-h-451
   fuel 0
}

# conduction solver definition:
solver conduction {
   bc 1 4 1 1000.0
   bc 2 4 1 1000.0
   bc 3 4 1 1000.0
   fixed 5 1 1000.0
   power 1 13.0e6
   convergence 0.001 2
}

