# mesh definition:
mesh unstructured mesh.pmp

# nodal mesh definition:
mesh-nodal unstructured mesh-nodal.pmp

# material definition:
material graphite graphite.pmp
material fuel fuel.pmp

# conduction solver definition:
solver conduction {
   bc heat-pipe dirichlet 1 1000.0
   bc shutdown-rod adiabatic
   bc exterior convection 1 5.0e-4 1 298.0
   bc -z convection 1 5.0e-4 1 298.0
   bc +z convection 1 5.0e-4 1 298.0
   power 5 {
      0.0 0.25 0.5 0.75 1.0
      15.0e6 15.0e6 30.0e6 7.5e6 7.5e6
   }
   convergence 1.0 2
}

