# mesh definition:
mesh unstructured mesh.pmp

# nodal mesh definition:
mesh-nodal unstructured mesh-nodal.pmp

# material definition:
material graphite graphite.pmp
material fuel fuel.pmp
material heat-pipe
material shutdown-rod
material heat-pipe-adiabatic

# conduction solver definition:
solver conduction {
   bc exterior convection 5.0e-4 298.0
   bc -z convection 5.0e-4 298.0
   bc +z convection 5.0e-4 298.0
   bcmat heat-pipe convection 751.9e-4 950.0
   bcmat shutdown-rod adiabatic
   bcmat heat-pipe-adiabatic adiabatic
   power 1 15.0e6
   convergence 1.0 2
}
