# mesh definition:
mesh unstructured mesh.pmp

# material definition:
material fuel1 ../materials/fuel.pmp
material fuel2 ../materials/fuel.pmp
material fuel1+rod ../materials/fuel.pmp
material fuel2+rod ../materials/fuel.pmp
material moderator ../materials/reflector.pmp
material reflector ../materials/reflector.pmp

# diffusion solver definition:
solver diffusion {
   energy-groups 11
   power 13.0e6
}

# precursor solver definition:
solver precursors {
   precursor-groups 6
}

# conduction solver definition:
solver conduction {
   convergence 0.001 2
}

# neutronics solver definition:
solver coupled neutronics {
   coupled-solvers 2 diffusion precursors
   implicit 1
   convergence 0.01 2
}

# main solver definition:
solver coupled main {
   coupled-solvers 2 neutronics conduction
   implicit 0
}

# boundary conditions for the diffusion solver:
bc diffusion 1 1
bc diffusion 2 1
bc diffusion 3 1

# boundary conditions for the conduction solver:
bc conduction 1 4 300.0
bc conduction 2 4 300.0
bc conduction 3 4 300.0

# time discretization:
dt -8
0.1
