# mesh definition:
mesh unstructured mesh.pmp

# material definition:
material fuel ../materials/fuel-2-groups.pmp
material heat-pipe ../materials/fuel-2-groups.pmp
material reflector ../materials/reflector-2-groups.pmp

# diffusion solver definition:
solver diffusion {
   energy-groups 2
   bc 1 1
   bc 2 1
   bc 3 1
   power 13.0e6
}

# precursor solver definition:
solver precursors {
   precursor-groups 6
}

# conduction solver definition:
solver conduction {
   bc 1 4 3 {
      0.0 0.4 0.8
      350.0 300.0 350.0
   }
   bc 2 4 3 {
      0.0 0.4 0.8
      350.0 300.0 350.0
   }
   bc 3 4 3 {
      0.0 0.4 0.8
      350.0 300.0 350.0
   }
   fixed 2 3 {
      0.0 0.4 0.8
      1200.0 800.0 1200.0
   }
   convergence 1.0 2
}

# main solver definition:
solver coupled main {
   coupled-solvers 3 diffusion precursors conduction
   implicit 1
   convergence 0.01 2
}

# time discretization:
dt -8
0.1
